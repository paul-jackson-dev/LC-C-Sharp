@using CodingEvents.Models
@model List<Tag>

    <h1>Tags</h1>

@if(Model.Count == 0)
{
    <h2>No tags yet</h2>
}
else{
    <li>
        @foreach (Tag tag in Model)
        {
            <ul>@tag.Id : <a asp-controller="Tag" asp-action="Detail" asp-route-id="@tag.Id">@tag.Name</a></ul>
        }
    </li>
}