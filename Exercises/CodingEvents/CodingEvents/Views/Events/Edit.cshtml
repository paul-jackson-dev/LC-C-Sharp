<h1>@ViewBag.title</h1>

<form method="post" action="/event/edit">
    <div class="form-group">
        <label for="name">Name</label>
        <input name="name" type="text" value="@ViewBag.singleEvent.Name" />
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <input name="description" type="text" value="@ViewBag.singleEvent.Description" />
    </div>
    <div>
        <input type="hidden" name="eventId" value="@ViewBag.singleEvent.Id"
    </div>
    <input type="submit" value="Edit Event" />
</form>