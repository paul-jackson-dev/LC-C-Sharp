@using CodingEvents.Models
@model List<Event>

<h1>Coding Events</h1>

<p>
    <a asp-controller="Events" asp-action="Add">add an event</a>
</p>


@if (Model.Count == 0)
{
    <p>No fun here, please add an event.</p>
}

<table>
    <tr>
        <th>
            Id
        </th>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th>
            Location
        </th>
        <th>
            Email
        </th>
        <th>
            Category
        </th>
    </tr>
    @foreach (Event singleEvent in Model)
    {
        <tr>
            <td>
                <a href="/event/edit/@singleEvent.Id">@singleEvent.Id</a>
            </td>
            <td>@singleEvent.Name</td>
            <td>@singleEvent.Description</td>
            <td>@singleEvent.Location</td>
            <td>@singleEvent.Email</td>
            <td>@singleEvent.Category.Name</td>
        </tr>
    }
</table>

