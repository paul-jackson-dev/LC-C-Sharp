    @foreach (var job in ViewBag.jobs)
    {
        <table class="job-listing">
            <tr>
                <th>ID</th>
                <td>@job.Id</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>@job.Name</td>
            </tr>
            <tr>
                <th>Employer</th>
                <td>
                    <a href="/List/Jobs?column=employer&value=@job.Employer">@job.Employer</a>
                </td>
            </tr>
            <tr>
                <th>Location</th>
                <td>
                    @*@job.Location*@
                    <a href="/List/Jobs?column=location&value=@job.Location">@job.Location</a>
                </td>
            </tr>
            <tr>
                <th>Position Type</th>
                <td>
                    <a href="/List/Jobs?column=positionType&value=@job.PositionType">@job.PositionType</a>
                </td>
            </tr>
            <tr>
                <th>Core Competency</th>
                <td>
                    <a href="/List/Jobs?column=coreCompetency&value=@job.CoreCompetency">@job.CoreCompetency</a>
                </td>
            </tr>
        </table>
    }

